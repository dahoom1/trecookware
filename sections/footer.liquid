<style>
  /* Force override all default footer styles */
  .footer.tre-footer * {
    box-sizing: border-box !important;
    color: #ffffff;
  }

  .tre-footer {
    background-color: #26231e !important;
    color: #ffffff !important;
    padding: 60px 0 40px !important;
    display: block !important;
    width: 100% !important;
  }

  .tre-footer-container {
    max-width: 1400px !important;
    margin: 0 auto !important;
    padding: 0 20px !important;
    display: block !important;
    width: 100% !important;
  }

  /* Top section with 4 columns */
  .tre-footer-top {
    display: grid !important;
    grid-template-columns: 1fr !important;
    gap: 40px !important;
    margin-bottom: 60px !important;
    width: 100% !important;
  }

  @media screen and (min-width: 750px) {
    .tre-footer-top {
      grid-template-columns: repeat(4, 1fr) !important;
      gap: 60px !important;
    }
  }

  .tre-footer-column {
    display: block !important;
    min-height: 50px !important;
    visibility: visible !important;
    opacity: 1 !important;
  }

  .tre-footer-column h2 {
    font-size: var(--t-h3) !important;
    font-family: var(--font-heading-family) !important;
    font-weight: 500 !important;
    margin: 0 0 20px 0 !important;
    color: #ffffff !important;
    display: block !important;
  }

  .tre-footer-column ul {
    list-style: none !important;
    padding: 0 !important;
    margin: 0 !important;
    display: block !important;
  }

  .tre-footer-column li {
    margin-bottom: 0px !important;
    display: block !important;
  }

  .tre-footer-column a {
    color: #ffffff !important;
    text-decoration: none !important;
    font-size: var(--t-small) !important;
    font-family: var(--font-body-family) !important;
    line-height: 1.6 !important;
    transition: opacity 0.3s ease !important;
    display: inline-block !important;
  }

  .tre-footer-column a:hover {
    opacity: 0.7 !important;
  }

  /* Newsletter column */
  .tre-footer-newsletter {
    display: block !important;
  }

  .tre-footer-newsletter h2 {
    font-size: var(--t-h3) !important;
    font-family: var(--font-heading-family) !important;
    font-weight: 500 !important;
    margin: 0 0 20px 0 !important;
    color: #ffffff !important;
  }

  .tre-footer-newsletter-form {
    display: flex !important;
    gap: 10px !important;
  }

  .tre-footer-newsletter-input {
    flex: 1 !important;
    background: #ffffff !important;
    border: none !important;
    padding: 12px 16px !important;
    color: #000000 !important;
    font-size: var(--t-small) !important;
    font-family: var(--font-body-family) !important;
  }

  .tre-footer-newsletter-input::placeholder {
    color: #999999 !important;
  }

  .tre-footer-newsletter-input:focus {
    outline: none !important;
  }

  .tre-footer-newsletter-button {
    background: transparent !important;
    border: 1px solid #ffffff !important;
    color: #ffffff !important;
    padding: 12px 30px !important;
    cursor: pointer !important;
    font-size: var(--t-small) !important;
    font-family: var(--font-body-family) !important;
    transition: all 0.3s ease !important;
    white-space: nowrap !important;
  }

  .tre-footer-newsletter-button:hover {
    background: #ffffff !important;
    color: #26231e !important;
  }

  .tre-footer-newsletter-message {
    margin-top: 10px !important;
    font-size: var(--t-small) !important;
    font-family: var(--font-body-family) !important;
  }

  /* Bottom section */
  .tre-footer-bottom {
    border-top: none !important;
    padding-top: 60px !important;
    display: flex !important;
    justify-content: space-between !important;
    align-items: flex-end !important;
    flex-wrap: wrap !important;
    gap: 30px !important;
  }

  .tre-footer-logo {
    max-width: 300px;
  }

  .tre-footer-logo img {
    width: 100%;
    height: auto;
    display: block;
  }

  .tre-footer-logo-fallback {
    font-size: 80px;
    font-weight: 300;
    line-height: 1;
    letter-spacing: -0.02em;
    color: #ffffff;
  }

  .tre-footer-logo-fallback sup {
    font-size: 24px;
    vertical-align: super;
  }

  .tre-footer-tagline {
    text-align: right;
    font-size: var(--t-h2);
    font-family: var(--font-heading-family);
    line-height: 1.3;
    font-weight: 300;
    color: #ffffff;
  }

  /* Social media icons */
  .tre-footer-social {
    display: flex;
    gap: 16px;
    align-items: center;
    margin-top: 20px;
  }

  .tre-footer-social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    color: #ffffff;
    transition: all 0.3s ease;
  }

  .tre-footer-social a:hover {
    background: #ffffff;
    border-color: #ffffff;
  }

  .tre-footer-social a:hover svg {
    fill: #26231e;
  }

  .tre-footer-social svg {
    width: 20px;
    height: 20px;
    fill: #ffffff;
    transition: fill 0.3s ease;
  }

  /* Legal/copyright section */
  .tre-footer-legal {
    margin-top: 40px;
    padding-top: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
    font-size: var(--t-small);
    font-family: var(--font-body-family);
  }

  .tre-footer-legal-links {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 10px;
    opacity: 0.7;
  }

  .tre-footer-legal-links a {
    color: #ffffff !important;
    text-decoration: none !important;
    margin-right: 20px;
    font-family: inherit;
  }

  .tre-footer-legal-links a:hover {
    opacity: 0.7;
  }

  .tre-footer-payment-icons {
    display: flex;
    gap: 8px;
    align-items: center;
    flex-wrap: wrap;
  }

  .tre-footer-payment-icons .icon {
    height: 20px;
    width: auto;
    max-width: 38px;
  }

  .native-payment-icon {
    height: 20px !important;
    width: auto !important;
    display: inline-block !important;
    vertical-align: middle !important;
    flex-shrink: 0 !important;
    border-radius: 3px !important;
  }

  /* Certification logos section */
  .tre-footer-certifications {
    display: flex;
    gap: 16px;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 20px;
  }

  .tre-footer-certification-logo {
    height: 50px !important;
    width: auto !important;
    max-width: 80px !important;
    object-fit: contain !important;
  }

  /* Mobile Styles */
  @media screen and (max-width: 749px) {
    .tre-footer-top {
      display: flex !important;
      flex-direction: column !important;
    }

    .tre-footer-column:last-child {
      order: -1 !important;
    }

    .tre-footer-newsletter h2 {
      text-align: left !important;
    }

    [dir="rtl"] .tre-footer-newsletter h2 {
      text-align: right !important;
    }

    .tre-footer-container {
      display: flex !important;
      flex-direction: column !important;
    }

    .tre-footer-bottom {
      align-items: flex-start !important;
      padding-top: 40px !important;
      flex-direction: column !important;
      position: relative !important;
      order: 4 !important;
    }

    .tre-footer-logo {
      max-width: 100% !important;
      width: 100% !important;
      order: 3 !important;
      align-self: flex-start !important;
    }

    .tre-footer-logo-fallback {
      font-size: 180px !important;
      text-align: left !important;
      position: relative !important;
      line-height: 0.85 !important;
      letter-spacing: -0.05em !important;
    }

    .tre-footer-logo-fallback sup {
      font-size: 32px !important;
      position: absolute !important;
      top: -20px !important;
      right: -40px !important;
      vertical-align: baseline !important;
    }

    .tre-footer-tagline {
      text-align: left !important;
      order: 2 !important;
      align-self: flex-start !important;
      margin-bottom: 20px !important;
    }

    .tre-footer-newsletter-form {
      flex-direction: column !important;
    }

    .tre-footer-social {
      order: 2 !important;
      margin-top: 30px !important;
      margin-bottom: 30px !important;
    }

    .tre-footer-legal {
      flex-direction: column !important;
      align-items: flex-start !important;
      order: 3 !important;
      margin-top: 0 !important;
      padding-top: 0 !important;
      margin-bottom: 40px !important;
    }

    .tre-footer-legal-links {
      flex-direction: column;
      align-items: flex-start;
    }

    .tre-footer-legal-links a {
      margin-right: 0;
    }

    .tre-footer-certifications {
      margin-top: 15px;
      gap: 12px;
    }
    
    .tre-footer-certification-logo {
      height: 40px !important;
      max-width: 70px !important;
    }
  }
</style>

{%- style -%}
  .footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer {
      margin-top: {{ section.settings.margin_top }}px;
    }
  }
{%- endstyle -%}

<footer class="footer tre-footer">
  {%- liquid
    assign has_social_icons = false
    if settings.social_facebook_link != blank or settings.social_instagram_link != blank or settings.social_youtube_link != blank or settings.social_tiktok_link != blank or settings.social_twitter_link != blank or settings.social_snapchat_link != blank
      assign has_social_icons = true
    endif
  -%}

  <div class="tre-footer-container">
    <!-- Top section with menu columns and newsletter -->
    <div class="tre-footer-top">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when '@app' -%}
            <div class="tre-footer-column" {{ block.shopify_attributes }}>
              {% render block %}
            </div>

          {%- when 'link_list' -%}
            {%- if block.settings.menu != blank -%}
              <div class="tre-footer-column" {{ block.shopify_attributes }}>
                {%- if block.settings.heading != blank -%}
                  <h2>{{ block.settings.heading }}</h2>
                {%- endif -%}
                <ul>
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}">{{ link.title | escape }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}

      {%- if section.settings.newsletter_enable -%}
        <div class="tre-footer-column">
          <div class="tre-footer-newsletter">
            {%- if section.settings.newsletter_heading != blank -%}
              <h2>{{ section.settings.newsletter_heading }}</h2>
            {%- endif -%}
            
            {%- form 'customer', id: 'ContactFooter', class: 'tre-footer-newsletter-form' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input
                id="NewsletterForm--{{ section.id }}"
                type="email"
                name="contact[email]"
                class="tre-footer-newsletter-input"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  autofocus
                  aria-invalid="true"
                {% endif %}
                placeholder="{{ 'newsletter.label' | t }}"
                required
              >
              <button
                type="submit"
                class="tre-footer-newsletter-button"
                name="commit"
                aria-label="{{ 'newsletter.button_label' | t }}"
              >
                Send
              </button>
            {%- endform -%}

            {%- if form.posted_successfully? -%}
              <div class="tre-footer-newsletter-message" style="color: #4caf50;">
                {{ 'newsletter.success' | t }}
              </div>
            {%- endif -%}
            {%- if form.errors -%}
              <div class="tre-footer-newsletter-message" style="color: #f44336;">
                {{ form.errors | default_errors }}
              </div>
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}
    </div>

    <!-- Social media icons -->
    {%- if section.settings.show_social and has_social_icons -%}

            </svg>

            <!-- Tamara — dark navy + three-arc split-payment icon + wordmark -->
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 76 36" role="img" aria-label="Tamara" class="icon icon--full-color native-payment-icon" width="76" height="36">
              <rect width="76" height="36" rx="3" fill="#1D2146"/>
              <!-- Outer arc — pink -->
              <path d="M5 29 A14 14 0 0 1 33 29" fill="none" stroke="#E53D76" stroke-width="3" stroke-linecap="round"/>
              <!-- Middle arc — purple -->
              <path d="M10 29 A9 9 0 0 1 28 29" fill="none" stroke="#8B5FCC" stroke-width="3" stroke-linecap="round"/>
              <!-- Inner arc — blue -->
              <path d="M15 29 A4 4 0 0 1 23 29" fill="none" stroke="#4DAEDE" stroke-width="3" stroke-linecap="round"/>
              <!-- tamara wordmark -->
              <text x="56" y="23" text-anchor="middle" fill="#ffffff" font-size="10" font-family="Arial, Helvetica, sans-serif" font-weight="700" letter-spacing="0.5">tamara</text>
            </svg>
          </div>
        {%- endif -%}

        {%- comment -%} Certification Logos Section {%- endcomment -%}
        {%- if section.settings.saudi_business_logo != blank or section.settings.vat_certificate_logo != blank -%}
          <div class="tre-footer-certifications">
            {%- if section.settings.saudi_business_logo != blank -%}
              {%- assign saudi_logo_width = section.settings.saudi_business_logo.width | at_most: 160 -%}
              {%- assign saudi_logo_height = saudi_logo_width | divided_by: section.settings.saudi_business_logo.aspect_ratio | round -%}
              <img 
                src="{{ section.settings.saudi_business_logo | image_url: width: 160 }}" 
                alt="Saudi Business Center" 
                class="tre-footer-certification-logo"
                loading="lazy"
                width="{{ saudi_logo_width }}"
                height="{{ saudi_logo_height }}"
              >
            {%- endif -%}
            
            {%- if section.settings.vat_certificate_logo != blank -%}
              {%- assign vat_logo_width = section.settings.vat_certificate_logo.width | at_most: 160 -%}
              {%- assign vat_logo_height = vat_logo_width | divided_by: section.settings.vat_certificate_logo.aspect_ratio | round -%}
              <img 
                src="{{ section.settings.vat_certificate_logo | image_url: width: 160 }}" 
                alt="VAT Certificate" 
                class="tre-footer-certification-logo"
                loading="lazy"
                width="{{ vat_logo_width }}"
                height="{{ vat_logo_height }}"
              >
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>

    <!-- Bottom section with logo and tagline -->
    <div class="tre-footer-bottom">
      {%- if section.settings.footer_logo != blank -%}
        {%- assign logo_width = section.settings.footer_logo.width | at_most: 600 -%}
        {%- assign logo_height = logo_width | divided_by: section.settings.footer_logo.aspect_ratio | round -%}
        <div class="tre-footer-logo">
          <img
            src="{{ section.settings.footer_logo | image_url: width: 600 }}"
            alt="{{ shop.name }}"
            loading="lazy"
            width="{{ logo_width }}"
            height="{{ logo_height }}"
          >
        </div>
      {%- else -%}
        <div class="tre-footer-logo">
          <div class="tre-footer-logo-fallback">
            tre<sup>TM</sup>
          </div>
        </div>
      {%- endif -%}
      
      <div class="tre-footer-tagline">
        {%- if section.settings.tagline != blank -%}
          {{ section.settings.tagline }}
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>


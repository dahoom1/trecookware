{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Custom FAQ Styles */
  .faq-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: start;
  }

  @media screen and (min-width: 990px) {
    .faq-grid {
      grid-template-columns: 1fr 1.5fr;
      gap: 5rem;
    }
  }

  .faq-heading-wrapper {
    /* Removed sticky positioning */
  }

  .faq-heading-wrapper h2 {
    font-size: 2.5rem;
    line-height: 1.2;
    margin: 0;
    font-weight: 400;
  }

  @media screen and (min-width: 750px) {
    .faq-heading-wrapper h2 {
      font-size: 3.5rem;
    }
  }

  .faq-questions {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .faq-item {
    border: none;
  }

  .faq-item details {
    padding: 0;
  }

  .faq-item summary {
    display: flex;
    align-items: center;
    gap: 1rem;
    cursor: pointer;
    list-style: none;
    font-size: 1.5rem;
    font-weight: 400;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
  }

  .faq-item summary::-webkit-details-marker {
    display: none;
  }

  .faq-item summary:hover {
    opacity: 0.7;
  }

  .icon-plus {
    flex-shrink: 0;
    width: 1.5rem;
    height: 1.5rem;
    position: relative;
    display: block;
    transition: transform 0.3s ease;
  }

  .icon-plus-horizontal,
  .icon-plus-vertical {
    position: absolute;
    background-color: currentColor;
  }

  .icon-plus-horizontal {
    width: 100%;
    height: 2px;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
  }

  .icon-plus-vertical {
    width: 2px;
    height: 100%;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
  }

  .faq-item details[open] .icon-plus {
    transform: rotate(180deg);
  }

  .faq-question-text {
    flex: 1;
  }

  .faq-answer {
    padding: 1rem 0 1rem 2.5rem;
    font-size: 1rem;
    line-height: 1.6;
    color: rgba(0, 0, 0, 0.7);
  }

  .faq-answer p {
    margin: 0 0 1rem 0;
  }

  .faq-answer p:last-child {
    margin-bottom: 0;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="faq-grid">
      <!-- Left Column - Heading -->
      <div class="faq-heading-wrapper">
        {%- if section.settings.heading != blank -%}
          <h2 class="inline-richtext">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
      </div>

      <!-- Right Column - Questions -->
      <div class="faq-questions">
        {%- for block in section.blocks -%}
          <div class="faq-item" {{ block.shopify_attributes }}>
            <details
              id="Details-{{ block.id }}-{{ section.id }}"
              {% if section.settings.open_first_collapsible_row and forloop.first %}
                open
              {% endif %}
            >
              <summary>
                <div class="icon-plus">
                  <span class="icon-plus-horizontal"></span>
                  <span class="icon-plus-vertical"></span>
                </div>
                <span class="faq-question-text">
                  {{ block.settings.heading | default: block.settings.page.title }}
                </span>
              </summary>
              <div class="faq-answer rte">
                {{ block.settings.row_content }}
                {{ block.settings.page.content }}
              </div>
            </details>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "FAQ Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "open_first_collapsible_row",
      "default": false,
      "label": "Open first question by default"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "collapsible_row",
      "name": "Question",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Question",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "row_content",
          "label": "Answer"
        },
        {
          "type": "page",
          "id": "page",
          "label": "Answer from page"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ",
      "blocks": [
        {
          "type": "collapsible_row",
          "settings": {
            "heading": "Questions 1"
          }
        },
        {
          "type": "collapsible_row",
          "settings": {
            "heading": "Question 2"
          }
        },
        {
          "type": "collapsible_row",
          "settings": {
            "heading": "Question 3"
          }
        }
      ]
    }
  ]
}
{% endschema %}
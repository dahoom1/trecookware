<style>

/* Why Stainless Steel Section Styles */
.why-stainless-steel {
  width: 100%;
}

.why-stainless-steel .page-width {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

/* Animation Keyframes */
@keyframes slideUpFade {
  from {
    opacity: 0;
    transform: translateY(40px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* Header Layout */
.wss-header {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16px;
  margin-bottom: 28px;
}

.wss-title-wrapper {
  width: 100%;
  opacity: 0;
  animation: slideUpFade 0.8s ease-out forwards;
  animation-delay: 0.1s;
}

.wss-title {
  margin: 0;
  line-height: 1.2;
  font-family: var(--font-heading-family);
  font-size: var(--t-h1);
}

.wss-content-wrapper {
  width: 100%;
  opacity: 0;
  animation: slideUpFade 0.8s ease-out forwards;
  animation-delay: 0.3s;
}

.wss-description {
  margin: 0;
  line-height: 1.6;
  font-family: var(--font-body-family);
  font-size: var(--t-body);
}

.wss-description p {
  margin: 0;
}

.wss-cta-wrapper {
  width: 100%;
  opacity: 0;
  animation: slideUpFade 0.8s ease-out forwards;
  animation-delay: 0.5s;
}

.wss-cta {
  display: inline-block;
  text-decoration: underline;
  text-underline-offset: 4px;
  transition: opacity 0.2s ease;
  font-family: var(--font-body-family);
  font-size: var(--t-small);
}

.wss-cta:hover {
  opacity: 0.7;
}

/* Features Grid/Carousel Container */
.wss-features-wrapper {
  position: relative;
  overflow: hidden;
}

.wss-features {
  display: grid;
  grid-template-columns: 1fr;
  gap: 20px;
}

/* Mobile Carousel Styles */
@media screen and (max-width: 749px) {
  .wss-features {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    gap: 16px;
    padding-bottom: 16px;
  }

  .wss-features::-webkit-scrollbar {
    display: none;
  }

  .wss-feature-card {
    flex: 0 0 85%;
    scroll-snap-align: start;
    max-width: 400px;
  }

  .wss-carousel-dots {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 20px;
    opacity: 0;
    animation: fadeIn 0.6s ease-out forwards;
    animation-delay: 1.3s;
  }

  .wss-carousel-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.2);
    border: none;
    padding: 0;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .wss-carousel-dot.active {
    background-color: rgba(0, 0, 0, 0.7);
    width: 24px;
    border-radius: 4px;
  }
}

/* Feature Card Styles */
.wss-feature-card {
  display: flex;
  flex-direction: column;
  gap: 0;
  position: relative;
  background: #ffffff;
  overflow: hidden;
  opacity: 0;
  animation: slideUpFade 0.8s ease-out forwards;
}

/* Staggered animation delays for cards */
.wss-feature-card:nth-child(1) {
  animation-delay: 0.6s;
}
.wss-feature-card:nth-child(2) {
  animation-delay: 0.8s;
}
.wss-feature-card:nth-child(3) {
  animation-delay: 1s;
}
.wss-feature-card:nth-child(4) {
  animation-delay: 1.2s;
}
.wss-feature-card:nth-child(5) {
  animation-delay: 1.4s;
}
.wss-feature-card:nth-child(6) {
  animation-delay: 1.6s;
}

/* Feature Image/Video Banner - FIXED 1:1 ASPECT RATIO */
.wss-feature-media {
  width: 100%;
  aspect-ratio: 1 / 1;
  position: relative;
  overflow: hidden;
}

.wss-feature-media img,
.wss-feature-media video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Video specific styles */
.wss-feature-media video {
  background-color: #000;
}

/* Icon positioned on media */
.wss-feature-icon {
  position: absolute;
  bottom: 16px;
  left: 16px;
  width: 50px;
  height: 50px;
  flex-shrink: 0;
  z-index: 2;
  opacity: 0;
  animation: fadeIn 0.6s ease-out forwards;
  animation-delay: 1.4s;
}

.wss-feature-card:nth-child(1) .wss-feature-icon {
  animation-delay: 1.4s;
}
.wss-feature-card:nth-child(2) .wss-feature-icon {
  animation-delay: 1.6s;
}
.wss-feature-card:nth-child(3) .wss-feature-icon {
  animation-delay: 1.8s;
}

.wss-feature-icon img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* Feature Content Banner - Fixed height so all cards stay uniform */
.wss-feature-content-banner {
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 6px;
  box-sizing: border-box;
  height: 120px;
  overflow-y: auto;
  scrollbar-width: thin;
  scrollbar-color: rgba(0,0,0,0.25) transparent;
}

.wss-feature-content {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.wss-feature-title {
  margin: 0;
  line-height: 1.2;
  font-family: var(--font-heading-family);
  font-size: var(--t-h3);
}

.wss-feature-subtitle {
  margin: 0;
  line-height: 1.3;
  font-family: var(--font-body-family);
  font-size: var(--t-subtitle);
}

.wss-feature-description {
  margin: 0;
  line-height: 1.5;
  font-family: var(--font-body-family);
  font-size: var(--t-body);
}

/* Smooth font rendering */
.wss-title,
.wss-description,
.wss-cta,
.wss-feature-title,
.wss-feature-subtitle,
.wss-feature-description {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Focus states for accessibility */
.wss-cta:focus-visible {
  outline: 2px solid currentColor;
  outline-offset: 4px;
  border-radius: 2px;
}

/* Tablet Styles */
@media screen and (min-width: 750px) {

<script>
(function() {
  const sectionId = '{{ section.id }}';
  const carousel = document.getElementById('wss-features-' + sectionId);
  const dotsContainer = document.getElementById('wss-dots-' + sectionId);
  
  // Guard clause if elements don't exist
  if (!carousel || !dotsContainer) return;

  const dots = dotsContainer.querySelectorAll('.wss-carousel-dot');
  const cards = carousel.querySelectorAll('.wss-feature-card');

  // Logic only runs if we are on mobile (where carousel exists)
  if (window.innerWidth < 750 && dots.length > 0) {
    
    // 1. CLICK EVENT: Scroll to card using browser-native API (RTL safe)
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        const targetCard = cards[index];
        if (targetCard) {
          // scrollIntoView handles RTL/LTR direction automatically
          targetCard.scrollIntoView({
            behavior: 'smooth',
            block: 'nearest',
            inline: 'center'
          });
        }
      });
    });

    // 2. SCROLL DETECTION: Use IntersectionObserver instead of math
    // This watches for which card is actually visible on screen
    const observerOptions = {
      root: carousel,
      threshold: 0.6 // Card is considered "active" when 60% visible
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Find which card this is
          const index = Array.from(cards).indexOf(entry.target);
          
          // Update active dot class
          dots.forEach(d => d.classList.remove('active'));
          if(dots[index]) {
            dots[index].classList.add('active');
          }
        }
      });
    }, observerOptions);

    // Start watching all cards
    cards.forEach(card => observer.observe(card));
  }
})();
</script>


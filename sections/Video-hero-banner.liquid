{% style %}
/* Hero Video Banner Styles */
/* Mobile:  video on top | colored content below  */
/* Desktop: 1/3 text panel (left) | 2/3 video (right) */

.hero-video-banner {
  width: 100%;
  overflow: hidden;
  display: block;
}

/* === VIDEO PANEL === */
.hero-video-banner__video-panel {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: {{ section.settings.min_height_mobile }}px;
}

.hero-video-banner__video-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.hero-video-banner__video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.hero-video-banner__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

/* === DESKTOP TEXT PANEL (left 1/3, desktop only) === */
.hero-video-banner__text-panel {
  display: none;
  background-color: {{ section.settings.mobile_content_bg_color | default: '#8B4513' }};
  padding: {{ section.settings.mobile_content_padding_vertical | default: 40 }}px {{ section.settings.mobile_content_padding_horizontal | default: 20 }}px;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  flex-shrink: 0;
  box-sizing: border-box;
}

.hero-video-banner__text-panel-inner {
  width: 100%;
}

/* === MOBILE / SHARED CONTENT STYLES === */
.hero-video-banner__mobile-content {
  display: none;
  background-color: {{ section.settings.mobile_content_bg_color | default: '#8B4513' }};
  padding: {{ section.settings.mobile_content_padding_vertical | default: 40 }}px {{ section.settings.mobile_content_padding_horizontal | default: 20 }}px;
  width: 100%;
  box-sizing: border-box;
}

.hero-video-banner__mobile-content-inner {
  max-width: {{ section.settings.content_max_width }}px;
  width: 100%;
  margin: 0 auto;
}

.hero-video-banner__mobile-heading-wrapper {
  display: block;
  width: 100%;
  text-align: {{ section.settings.mobile_text_alignment | default: 'center' | replace: 'left', 'start' | replace: 'right', 'end' }};
}

.hero-video-banner__mobile-heading {
  margin: 0 0 {{ section.settings.mobile_heading_margin_bottom | default: 16 }}px;
  line-height: 1.15;
  font-size: var(--t-display);
  font-weight: {{ section.settings.heading_font_weight }};
  color: {{ section.settings.mobile_heading_color | default: '#FFFFFF' }};
  text-align: inherit;
  display: inline-block;
  max-width: 100%;
  font-family: var(--font-heading-family);
}

.hero-video-banner__mobile-subheading-wrapper {
  display: block;
  width: 100%;
  text-align: {{ section.settings.mobile_text_alignment | default: 'center' | replace: 'left', 'start' | replace: 'right', 'end' }};
}

.hero-video-banner__mobile-subheading {
  margin: 0 0 {{ section.settings.mobile_subheading_margin_bottom | default: 24 }}px;
  line-height: 1.5;
  font-size: var(--t-subtitle);
  font-weight: {{ section.settings.subheading_font_weight }};
  color: {{ section.settings.mobile_subheading_color | default: '#FFFFFF' }};
  text-align: inherit;
  display: inline-block;
  max-width: 100%;
  font-family: var(--font-body-family);
}

.hero-video-banner__mobile-button-wrapper {
  display: flex;
  gap: 16px;
  flex-wrap: wrap;
  {% assign alignment = section.settings.mobile_button_alignment | default: 'center' %}
  {% if alignment == 'left' %}
    justify-content: flex-start;
  {% elsif alignment == 'right' %}
    justify-content: flex-end;
  {% elsif alignment == 'flex-start' %}
    justify-content: flex-start;
  {% elsif alignment == 'flex-end' %}
    justify-content: flex-end;
  {% else %}
    justify-content: center;
  {% endif %}
}

.hero-video-banner__mobile-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: {{ section.settings.mobile_button_padding_vertical | default: 12 }}px {{ section.settings.mobile_button_padding_horizontal | default: 24 }}px;
  font-size: var(--t-small);
  font-weight: {{ section.settings.button_font_weight }};
  text-decoration: none;
  border-radius: {{ section.settings.button_border_radius }}px;
  transition: all 0.3s ease;
  cursor: pointer;
  font-family: var(--font-body-family);
}

.hero-video-banner__mobile-button--primary {
  background-color: {{ section.settings.mobile_button_bg_color | default: '#000000' }};
  color: {{ section.settings.mobile_button_text_color | default: '#FFFFFF' }};
  border: {{ section.settings.button_border_width }}px solid {{ section.settings.mobile_button_border_color | default: '#000000' }};
}

.hero-video-banner__mobile-button--primary:hover {
  background-color: {{ section.settings.mobile_button_bg_color_hover | default: '#333333' }};
  color: {{ section.settings.mobile_button_text_color_hover | default: '#FFFFFF' }};
  border-color: {{ section.settings.mobile_button_border_color_hover | default: '#333333' }};
}

/* === MOBILE BREAKPOINT (749px and below) === */
@media screen and (max-width: 749px) {
  .hero-video-banner {
    display: block;
  }

  .hero-video-banner__video-panel {
    height: {{ section.settings.min_height_mobile }}px;
  }

  .hero-video-banner__mobile-content {
    display: block !important;
    margin-top: -1px;
  }

  .hero-video-banner__text-panel {
    display: none !important;
  }
}

/* === DESKTOP (750px and above): side-by-side split layout === */
@media screen and (min-width: 750px) {
  .hero-video-banner {
    display: flex;
    flex-direction: row;
    min-height: {{ section.settings.min_height_desktop }}px;
  }

  /* Left text panel — 1/3 width */
  .hero-video-banner__text-panel {
    display: flex;
    width: 33.333%;
    min-height: {{ section.settings.min_height_desktop }}px;
    position: relative;
  }

  /* Right video panel — 2/3 width */
  .hero-video-banner__video-panel {
    flex: 1;
    height: auto;
    min-height: {{ section.settings.min_height_desktop }}px;
  }

  .hero-video-banner__mobile-content {
    display: none !important;
  }

  /* Button pinned to bottom of text panel on desktop */
  .hero-video-banner__text-panel .hero-video-banner__mobile-button-wrapper {
    position: absolute;
    bottom: {{ section.settings.mobile_content_padding_vertical | default: 40 }}px;
    left: {{ section.settings.mobile_content_padding_horizontal | default: 20 }}px;
    right: {{ section.settings.mobile_content_padding_horizontal | default: 20 }}px;
  }
}

/* Focus states for accessibility */
.hero-video-banner__mobile-button:focus-visible {
  outline: 2px solid currentColor;
  outline-offset: 4px;
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
  .hero-video-banner__mobile-button {
    transition: none;
  }
}
{% endstyle %}

<div class="hero-video-banner">

  <!-- LEFT: Text panel — desktop only (1/3 width) -->
  <div class="hero-video-banner__text-panel">
    <div class="hero-video-banner__text-panel-inner">
      {% if section.settings.mobile_heading != blank %}
        <div class="hero-video-banner__mobile-heading-wrapper">
          <h2 class="hero-video-banner__mobile-heading">{{ section.settings.mobile_heading }}</h2>
        </div>
      {% endif %}

      {% if section.settings.mobile_subheading != blank %}
        <div class="hero-video-banner__mobile-subheading-wrapper">
          <p class="hero-video-banner__mobile-subheading">{{ section.settings.mobile_subheading }}</p>
        </div>
      {% endif %}

      {% if section.settings.mobile_button_text != blank or section.settings.mobile_button_secondary_text != blank %}
        <div class="hero-video-banner__mobile-button-wrapper">
          {% if section.settings.mobile_button_text != blank %}
            <a href="{{ section.settings.mobile_button_link }}" class="hero-video-banner__mobile-button hero-video-banner__mobile-button--primary">
              {{ section.settings.mobile_button_text }}
            </a>
          {% endif %}
          {% if section.settings.mobile_button_secondary_text != blank %}
            <a href="{{ section.settings.mobile_button_secondary_link }}" class="hero-video-banner__mobile-button hero-video-banner__mobile-button--secondary">
              {{ section.settings.mobile_button_secondary_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>

  <!-- RIGHT: Video panel — full width on mobile (top), 2/3 on desktop -->
  <div class="hero-video-banner__video-panel">
    {% if section.settings.video_shopify != blank %}
      <div class="hero-video-banner__video-wrapper">
        {{ section.settings.video_shopify | video_tag:
          autoplay: section.settings.video_autoplay,
          loop: section.settings.video_loop,
          muted: section.settings.video_muted,
          controls: false,
          class: 'hero-video-banner__video',
          image_size: '1920x'
        }}
      </div>
    {% endif %}

    {% if section.settings.enable_overlay %}
      <div class="hero-video-banner__overlay" style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
    {% endif %}
  </div>

  <!-- BOTTOM: Mobile-only colored content section (below video) -->
  <div class="hero-video-banner__mobile-content">
    <div class="hero-video-banner__mobile-content-inner">
      {% if section.settings.mobile_heading != blank %}
        <div class="hero-video-banner__mobile-heading-wrapper">
          <h2 class="hero-video-banner__mobile-heading">{{ section.settings.mobile_heading }}</h2>
        </div>
      {% endif %}

      {% if section.settings.mobile_subheading != blank %}
        <div class="hero-video-banner__mobile-subheading-wrapper">
          <p class="hero-video-banner__mobile-subheading">{{ section.settings.mobile_subheading }}</p>
        </div>
      {% endif %}

      {% if section.settings.mobile_button_text != blank or section.settings.mobile_button_secondary_text != blank %}
        <div class="hero-video-banner__mobile-button-wrapper">
          {% if section.settings.mobile_button_text != blank %}
            <a href="{{ section.settings.mobile_button_link }}" class="hero-video-banner__mobile-button hero-video-banner__mobile-button--primary">
              {{ section.settings.mobile_button_text }}
            </a>
          {% endif %}
          {% if section.settings.mobile_button_secondary_text != blank %}
            <a href="{{ section.settings.mobile_button_secondary_link }}" class="hero-video-banner__mobile-button hero-video-banner__mobile-button--secondary">
              {{ section.settings.mobile_button_secondary_text }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>

</div>


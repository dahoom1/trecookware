    background-color: {{ block.settings.background_color }};
  }

  .ai-before-after-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-before-after-title-{{ ai_gen_id }} {
    text-align: {{ block.settings.title_alignment }};
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 30px;
    font-weight: 600;
  }

  .ai-before-after-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.aspect_ratio }};
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    user-select: none;
  }

  .ai-before-after-image-container-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ai-before-after-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-before-after-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-before-after-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-before-after-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-before-after-after-container-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    clip-path: inset(0 0 0 0);
  }

  /* Labels are absolutely positioned relative to the wrapper now, so they stay visible */
  .ai-before-after-label-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.label_position_vertical }}px;
    background-color: {{ block.settings.label_bg_color }};
    color: {{ block.settings.label_text_color }};
    padding: 8px 16px;
    border-radius: {{ block.settings.label_border_radius }}px;
    font-size: {{ block.settings.label_font_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 5; /* Increased z-index to ensure it sits above images but below slider handle if they overlap */
    pointer-events: none; /* Allows clicking through the label to drag the slider */
  }

  .ai-before-after-label-before-{{ ai_gen_id }} {
    left: {{ block.settings.label_position_horizontal }}px;
  }

  .ai-before-after-label-after-{{ ai_gen_id }} {
    right: {{ block.settings.label_position_horizontal }}px;
  }

  .ai-before-after-slider-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 60px;
    cursor: ew-resize;
    z-index: 10; /* Ensure slider is top priority */
    transform: translateX(-50%);
  }

  .ai-before-after-slider-line-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: {{ block.settings.slider_line_width }}px;
    background-color: {{ block.settings.slider_color }};
    transform: translateX(-50%);
  }

  .ai-before-after-slider-handle-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    width: {{ block.settings.slider_handle_size }}px;
    height: {{ block.settings.slider_handle_size }}px;
    background-color: {{ block.settings.slider_color }};
    border: {{ block.settings.slider_border_width }}px solid {{ block.settings.slider_border_color }};
    border-radius: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .ai-before-after-slider-arrows-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
    color: {{ block.settings.slider_arrow_color }};
  }


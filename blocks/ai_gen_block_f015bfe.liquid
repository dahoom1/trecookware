{% doc %}
  @prompt
    A magazine-style editorial layout
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-layout-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.spacing }}px;
  }

  .ai-editorial-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-editorial-featured-{{ ai_gen_id }} {
    grid-column: span 8;
    position: relative;
  }

  .ai-editorial-featured-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: 500px;
    position: relative;
    overflow: hidden;
  }

  .ai-editorial-featured-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-editorial-featured-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: 500px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-editorial-featured-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  .ai-editorial-featured-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 40px;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
    color: {{ block.settings.featured_text_color }};
  }

  .ai-editorial-category-{{ ai_gen_id }} {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin-bottom: 12px;
    font-weight: 600;
    color: {{ block.settings.category_color }};
  }

  .ai-editorial-featured-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.featured_title_size }}px;
    line-height: 1.2;
    margin: 0 0 12px;
    font-weight: 700;
  }

  .ai-editorial-featured-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.featured_excerpt_size }}px;
    line-height: 1.6;
    margin: 0 0 16px;
    opacity: 0.9;
  }

  .ai-editorial-featured-meta-{{ ai_gen_id }} {
    font-size: 14px;
    opacity: 0.8;
  }

  .ai-editorial-sidebar-{{ ai_gen_id }} {
    grid-column: span 4;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-editorial-card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.card_background }};
    overflow: hidden;
  }

  .ai-editorial-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 200px;
    position: relative;
    overflow: hidden;
  }

  .ai-editorial-card-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-editorial-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-editorial-card-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 150px;
    max-height: 150px;
  }

  .ai-editorial-card-content-{{ ai_gen_id }} {
    padding: 24px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-editorial-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    line-height: 1.3;
    margin: 0 0 8px;
    font-weight: 600;
    color: {{ block.settings.card_text_color }};
  }

  .ai-editorial-card-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_excerpt_size }}px;
    line-height: 1.6;
    margin: 0 0 12px;
    color: {{ block.settings.card_text_color }};
    opacity: 0.8;
  }

  .ai-editorial-card-meta-{{ ai_gen_id }} {
    font-size: 12px;
    color: {{ block.settings.card_text_color }};
    opacity: 0.6;
    margin-top: auto;
  }

  .ai-editorial-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 989px) {
    .ai-editorial-featured-{{ ai_gen_id }} {
      grid-column: span 12;
    }

    .ai-editorial-sidebar-{{ ai_gen_id }} {
      grid-column: span 12;
    }

    .ai-editorial-featured-image-{{ ai_gen_id }},
    .ai-editorial-featured-placeholder-{{ ai_gen_id }} {
      min-height: 400px;
    }

    .ai-editorial-featured-content-{{ ai_gen_id }} {
      padding: 24px;
    }

    .ai-editorial-featured-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.featured_title_size }}px * 0.8);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-editorial-layout-{{ ai_gen_id }} {
      padding: {{ block.settings.spacing | times: 0.5 }}px;
    }

    .ai-editorial-grid-{{ ai_gen_id }} {
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-editorial-featured-image-{{ ai_gen_id }},
    .ai-editorial-featured-placeholder-{{ ai_gen_id }} {
      min-height: 300px;
    }

    .ai-editorial-featured-content-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-editorial-featured-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.featured_title_size }}px * 0.6);
    }

    .ai-editorial-featured-excerpt-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.featured_excerpt_size }}px * 0.9);
    }

    .ai-editorial-card-content-{{ ai_gen_id }} {
      padding: 16px;
    }
  }
{% endstyle %}

<div class="ai-editorial-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-editorial-grid-{{ ai_gen_id }}">
    <article class="ai-editorial-featured-{{ ai_gen_id }}">
      <div class="ai-editorial-featured-image-{{ ai_gen_id }}">
        {% if block.settings.featured_image %}
          <img
            src="{{ block.settings.featured_image | image_url: width: 1200 }}"
            alt="{{ block.settings.featured_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.featured_image.width }}"
            height="{{ block.settings.featured_image.height }}"
          >
        {% else %}
          <div class="ai-editorial-featured-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
            <div class="ai-editorial-empty-state-{{ ai_gen_id }}">
              Add a featured image
            </div>
          </div>
        {% endif %}
        <div class="ai-editorial-featured-content-{{ ai_gen_id }}">
          {% if block.settings.featured_category != blank %}
            <div class="ai-editorial-category-{{ ai_gen_id }}">{{ block.settings.featured_category }}</div>
          {% endif %}
          {% if block.settings.featured_title != blank %}
            <h2 class="ai-editorial-featured-title-{{ ai_gen_id }}">{{ block.settings.featured_title }}</h2>
          {% endif %}
          {% if block.settings.featured_excerpt != blank %}
            <div class="ai-editorial-featured-excerpt-{{ ai_gen_id }}">{{ block.settings.featured_excerpt }}</div>
          {% endif %}
          {% if block.settings.featured_author != blank or block.settings.featured_date != blank %}
            <div class="ai-editorial-featured-meta-{{ ai_gen_id }}">
              {% if block.settings.featured_author != blank %}
                {{ block.settings.featured_author }}
              {% endif %}
              {% if block.settings.featured_author != blank and block.settings.featured_date != blank %}
                •
              {% endif %}
              {% if block.settings.featured_date != blank %}
                {{ block.settings.featured_date }}
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </article>

    <aside class="ai-editorial-sidebar-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign card_image_key = 'card_' | append: i | append: '_image'
          assign card_category_key = 'card_' | append: i | append: '_category'
          assign card_title_key = 'card_' | append: i | append: '_title'
          assign card_excerpt_key = 'card_' | append: i | append: '_excerpt'
          assign card_author_key = 'card_' | append: i | append: '_author'
          assign card_date_key = 'card_' | append: i | append: '_date'

          assign card_image = block.settings[card_image_key]
          assign card_category = block.settings[card_category_key]
          assign card_title = block.settings[card_title_key]
          assign card_excerpt = block.settings[card_excerpt_key]
          assign card_author = block.settings[card_author_key]
          assign card_date = block.settings[card_date_key]
        %}

        <article class="ai-editorial-card-{{ ai_gen_id }}">
          <div class="ai-editorial-card-image-{{ ai_gen_id }}">
            {% if card_image %}
              <img
                src="{{ card_image | image_url: width: 600 }}"
                alt="{{ card_image.alt | escape }}"
                loading="lazy"
                width="{{ card_image.width }}"
                height="{{ card_image.height }}"
              >
            {% else %}
              <div class="ai-editorial-card-placeholder-{{ ai_gen_id }}">
                {{ 'product-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          <div class="ai-editorial-card-content-{{ ai_gen_id }}">
            {% if card_category != blank %}
              <div class="ai-editorial-category-{{ ai_gen_id }}">{{ card_category }}</div>
            {% endif %}
            {% if card_title != blank %}
              <h3 class="ai-editorial-card-title-{{ ai_gen_id }}">{{ card_title }}</h3>
            {% endif %}
            {% if card_excerpt != blank %}
              <div class="ai-editorial-card-excerpt-{{ ai_gen_id }}">{{ card_excerpt }}</div>
            {% endif %}
            {% if card_author != blank or card_date != blank %}
              <div class="ai-editorial-card-meta-{{ ai_gen_id }}">
                {% if card_author != blank %}
                  {{ card_author }}
                {% endif %}
                {% if card_author != blank and card_date != blank %}
                  •
                {% endif %}
                {% if card_date != blank %}
                  {{ card_date }}
                {% endif %}
              </div>
            {% endif %}
          </div>
        </article>
      {% endfor %}
    </aside>
  </div>
</div>


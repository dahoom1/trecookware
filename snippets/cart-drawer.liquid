{% javascript %}
  // Upsell Logic
  class CartUpsell {
    constructor() {
        this.init();
    }
    
    init() {
        // Use delegation for buttons since HTML might be re-rendered
        document.body.addEventListener('click', (e) => {
            if(e.target && e.target.classList.contains('js-upsell-add')) {
                this.addUpsell(e.target);
            }
        });
    }

    addUpsell(btn) {
        const variantId = btn.dataset.variantId;
        if(!variantId) return;

        btn.classList.add('loading');
        btn.textContent = 'Adding...';

        let formData = {
            'items': [{
                'id': variantId,
                'quantity': 1
            }]
        };

        fetch(window.Shopify.routes.root + 'cart/add.js', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
        })
        .then(response => {
            return response.json();
        })
        .then(data => {
            // Trigger cart drawer refresh (Standard Dawn Theme Event)
            const cartDrawer = document.querySelector('cart-drawer');
            if(cartDrawer) {
                 document.querySelector('cart-drawer-items').classList.add('is-loading');
                 
                 // Fetch updated cart sections
                 fetch(window.location.pathname + '?sections=cart-drawer')
                 .then(res => res.json())
                 .then(sections => {
                     const parser = new DOMParser();
                     const doc = parser.parseFromString(sections['cart-drawer'], 'text/html');
                     const newDrawer = doc.querySelector('cart-drawer');
                     if(newDrawer) {
                         document.querySelector('cart-drawer').innerHTML = newDrawer.innerHTML;
                     }
                 });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            btn.textContent = 'Error';
        });
    }
  }
  
  // Simple Urgency Timer
  function startTimer(duration, display) {
    var timer = duration, minutes, seconds;
    var interval = setInterval(function () {
        minutes = parseInt(timer / 60, 10);
        seconds = parseInt(timer % 60, 10);

        minutes = minutes < 10 ? "0" + minutes : minutes;
        seconds = seconds < 10 ? "0" + seconds : seconds;

        if (display) display.textContent = minutes + ":" + seconds;

        if (--timer < 0) {
            timer = duration; // Reset or stop
        }
    }, 1000);
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
        new CartUpsell();
        const timerDisplay = document.querySelector('#timer');
        if(timerDisplay) startTimer(600, timerDisplay); // 10 minutes
    });
  } else {
    new CartUpsell();
    const timerDisplay = document.querySelector('#timer');
    if(timerDisplay) startTimer(600, timerDisplay);
  }
{% endjavascript %}
